<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="vbox" prefHeight="400" prefWidth="800"
      fx:controller="org.uclouvain.visualsearchtree.tree.TreeUIController"
      onKeyPressed="#attachEvent"
      xmlns:fx="http://javafx.com/fxml">

   <MenuBar fx:id="menuBar">
      <Menu text="Node" onShowing="#alignMenuItemText">
         <MenuItem text="Show Labels" fx:id="showLabels" onAction="#showNodeLabels"/>
         <MenuItem text="Show Infos" fx:id="showInfos" onAction="#showNodeInfos"/>
         <MenuItem text="Optimization graph" fx:id="showGaph" onAction="#displayGraph"/>
         <MenuItem text="Save File" onAction="#saveTree" disable="true"/>
         <SeparatorMenuItem/>
         <MenuItem text="Exit" fx:id="closeMenu" onAction="#closeWindow"/>
      </Menu>
      <Menu text="Help">
         <MenuItem text="Search" disable="true"/>
         <MenuItem text="Help" visible="false"/>
         <SeparatorMenuItem/>
         <MenuItem text="About" fx:id="about" onAction="#aboutUs"/>
      </Menu>
   </MenuBar>

   <ScrollPane fx:id="sasd">
      <StackPane fx:id="treeroot" maxHeight="550" maxWidth="500" minHeight="300" minWidth="500" prefHeight="450"
                 prefWidth="500" style="">
      </StackPane>
   </ScrollPane>
   <VBox maxHeight="50" maxWidth="500" minHeight="50" minWidth="500" prefHeight="50" prefWidth="500" fx:id="legendbox"/>

   <!--   <VBox maxHeight="300" minHeight="150" minWidth="500" prefHeight="150" prefWidth="300" fx:id="chartUI"/>-->

   <TabPane fx:id="tabPane" side="BOTTOM" tabClosingPolicy="UNAVAILABLE">
      <tabs>
         <Tab text="Optimization Graph">
            <content>
               <AnchorPane id="Content">
                  <VBox minHeight="150" minWidth="480" prefHeight="220" prefWidth="280" fx:id="chartUI" style="-fx-cursor: crosshair"/>
               </AnchorPane>
            </content>
         </Tab>
         <Tab text="Node Infos">
            <content >
               <AnchorPane id="Content" maxHeight="300" minHeight="150" minWidth="500" prefHeight="150" prefWidth="300">
                  <Label style="-fx-padding: 10">Klaus ! You've to write node infos here onkeyup</Label>
               </AnchorPane>
            </content>
         </Tab>
      </tabs>
   </TabPane>

<!--   <VBox maxHeight="50" maxWidth="500" minHeight="50" minWidth="500" prefHeight="50" prefWidth="500" fx:id="legendbox"/>-->
</VBox>